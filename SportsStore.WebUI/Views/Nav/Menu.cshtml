@model IEnumerable<string>

@Html.ActionLink("Home", "List", "Product", null,
    new { @class = "btn btn-block btn-default btn-lg" })

@foreach (var item in Model)
{
    @Html.RouteLink(item, new
        {
            controller = "Product",
            action = "List",
            page = 1,
            category = item
        }, new
        {
            @class = "btn btn-block btn-default btn-lg"
        })
}